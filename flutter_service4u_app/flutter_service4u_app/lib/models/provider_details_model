// Provider model to hold provider details
import 'package:cloud_firestore/cloud_firestore.dart';

import 'package:cloud_firestore/cloud_firestore.dart';

class Provider {
  String name;
  String email;
  String mobile;
  String nationality;
  String major;
  String location;
  bool hasCar;
  String workingHours;

  Provider({
    required this.name,
    required this.email,
    required this.mobile,
    required this.nationality,
    required this.major,
    required this.location,
    required this.hasCar,
    required this.workingHours,
  });

  // Create a method to map Firestore data to a Provider object
  factory Provider.fromFirestore(DocumentSnapshot doc) {
    Map<String, dynamic> data = doc.data() as Map<String, dynamic>;

    return Provider(
      name: data['name'] ?? '', // Provider name
      email: data['email'] ?? '', // Provider email
      mobile: data['mobile'] ?? '', // Provider mobile
      nationality: data['nationality'] ?? '', // Provider nationality
      major: data['major'] ?? '', // Provider major (e.g., HVAC Technician, Plumber, ...)
      location: data['location'] ?? '', // Provider location
      hasCar: data['have a car?'] == 'true', // Convert string to boolean
      workingHours: data['preferred working hours'] ?? '', // Working hours
    );
  }
}